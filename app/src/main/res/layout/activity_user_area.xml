<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <!-- Titolo dell'area utente -->
    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/titleUserArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area Utente"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <!-- Sezione per i dati utente (visibile se loggato) -->
    <LinearLayout
            android:id="@+id/llUserData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/titleUserArea"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="gone">

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textCognome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cognome: "
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="8dp"/>

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="8dp"/>

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textTarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Targa: "
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="8dp"/>

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textPostoPrenotato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posto auto prenotato: Nessuno"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="16dp"/>

        <!-- Bottoni per utente loggato -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPaga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paga"
                    style="@style/Widget.Material3.Button.TextButton"/>

            <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    style="@style/Widget.Material3.Button.TextButton"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
