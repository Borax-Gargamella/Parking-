<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <!-- Titolo dell'area utente -->
        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleUserArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Area Utente"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                android:gravity="center"
                android:background="#FAFAFA"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lineBelowTitle" />

        <!-- Linea colorata sotto il titolo -->
        <View
                android:id="@+id/lineBelowTitle"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/titleUserArea"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

        <!-- Sezione per i dati utente (visibile se loggato) -->
        <LinearLayout
                android:id="@+id/llUserData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/lineBelowTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                android:background="@drawable/rounded_corners">

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome: "
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textCognome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cognome: "
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textTarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Targa: "
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical" />

            <!-- Bottoni per utente loggato -->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                <LinearLayout
                        android:id="@+id/llButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnModificaDati"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:text="Modifica Dati"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:padding="14dp"
                            android:backgroundTint="@color/button_background_tint"
                            android:textColor="@android:color/white" />

                    <!-- Spazio tra i bottoni -->
                    <Space
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" />

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLogout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:text="Logout"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:padding="14dp"
                            android:backgroundTint="@color/button_background_tint"
                            android:textColor="@android:color/white" />

                    <!-- Spazio tra i bottoni -->
                    <Space
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" />

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnModificaCredenziali"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:text="Modifica Credenziali"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:padding="14dp"
                            android:backgroundTint="@color/button_background_tint"
                            android:textColor="@android:color/white" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textPostoPrenotato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Posto auto prenotato: Nessuno"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:padding="8dp"
                        android:layout_marginTop="15dp"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:layout_below="@id/llButtons"/>

            </RelativeLayout>
        </LinearLayout>

        <!-- RecyclerView per la "tabella" di prenotazioni -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPrenotazioni"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintTop_toBottomOf="@+id/llUserData"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
