<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_marginBottom="50dp"
            android:fillViewport="true">

        <!-- Layout principale: una colonna verticale -->
        <LinearLayout
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Layout orizzontale per disporre i campi in due colonne -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <!-- Colonna sinistra -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <!-- Campo Nome -->
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputNome"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nome">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editNome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Cognome -->
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputCognome"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cognome"
                            android:layout_marginTop="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editCognome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Targa -->
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputTarga"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Targa"
                            android:layout_marginTop="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTarga"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Colonna destra -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                    <!-- Campo Data Inizio -->
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputDataInizio"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Data Inizio Prenotazione"
                            android:layout_marginTop="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editDataInizio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Data Fine -->
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputDataFine"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Data Fine Prenotazione"
                            android:layout_marginTop="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editDataFine"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Prezzo -->
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputPrezzo"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Prezzo"
                            android:layout_marginTop="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editPrezzo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Bottone Prenota, posizionato sotto le colonne -->
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrenota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prenota"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="15dp"
                    android:layout_marginHorizontal="80dp"
                    android:layout_marginBottom="120dp"/>
        </LinearLayout>

    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
