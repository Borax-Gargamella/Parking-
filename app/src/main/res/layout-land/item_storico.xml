<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/paga_posti">

    <!-- TextView per l'ID della prenotazione -->
    <TextView
            android:id="@+id/tvIdPrenotazione"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/llDates"
            android:layout_marginEnd="8dp"/>

    <!-- Contenitore per le date, disposto verticalmente -->
    <LinearLayout
            android:id="@+id/llDates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/tvIdPrenotazione"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnPaga"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <TextView
                android:id="@+id/tvDataPrenotazioneInizio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Data Inizio"/>

        <TextView
                android:id="@+id/tvDataPrenotazioneFine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Data Fine"/>
    </LinearLayout>

    <!-- Bottone per effettuare il pagamento -->
    <Button
            android:id="@+id/btnPaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paga"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
