<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="Parcheggio Smart"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.SmartParking"
            tools:targetApi="31">
        <activity
                android:name="com.contest.parking.presentation.MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Dichiarazione delle altre Activity -->
        <activity
                android:name="com.contest.parking.presentation.CompletaPagamentoActivity"
                android:exported="true"/>
        <activity
                android:name="com.contest.parking.presentation.DettaglioParcheggioActivity"
                android:exported="true"/>
        <activity
                android:name="com.contest.parking.presentation.LoginActivity"
                android:exported="true"/>
        <activity
                android:name="com.contest.parking.presentation.ParcheggiActivity"
                android:exported="true"/>
        <activity
                android:name="com.contest.parking.presentation.PaymentActivity"
                android:exported="true"/>
        <activity
                android:name="com.contest.parking.presentation.RegisterActivity"
                android:exported="true"/>
        <activity
                android:name="com.contest.parking.presentation.UserAreaActivity"
                android:exported="true"/>

    </application>

</manifest>
